<% provide( :title, "My Prospects") %>


 <h2 class="title1">My Prospects</h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
         
  

</div>



    
<div class="col-md-12 panel-grids">
<br>
<br>
<br>
<% if @users.any? %>

<%= pluralize @users.size,'Prospect' %> 
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Prospect Name</th>

      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |company| %>
      <tr>
        <td><%= company.name %> 
        </td>
       
        <td><%= link_to 'view', company , class:"btn btn-info btn-xs"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'Dashboard', root_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>


<%else%>

<p style="color:red;">You have not registered any prospect yet!</p>
<%end%>
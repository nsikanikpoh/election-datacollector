<% provide( :title, @interest_line.name) %>


<%if current_user.admin?%>
 <h2 class="title1" style="background-color:#edeff2;height: 50px; font-size:40px; color:orange;">  <%= @interest_line.name %></h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
</div>
   
<div class="col-md-12 panel-grids">
<div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title"> Patriots under  <%= @interest_line.name %></h3> </div> <div class="panel-body">

<small>this page is available to admins only</small>
</div>
<br>
<br>
<br>
  <center><strong><h2 style="color:orange; font-size:22px">Interest Line Description</h2></strong></center>
  <p class="lead" style="font-size:16px">
  <%= @interest_line.description %>
</p>

<% if @patriots.any? %>
<p class="lead" style="color:orange;">Patriots under this line</p>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Patriot Name</th>
     
      <th>Phone Number</th>
  
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @patriots.each do |company| %>
      <tr>
        <td><%= company.name %>

        </td>
       
<td><%= company.phone %></td>

        <td><%= link_to 'View Profile', company , class:"btn btn-info btn-xs"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  
<%= will_paginate @patriots, :renderer => BootstrapPagination::Rails %>
<%else%>

<p style="font-size:16px; color:red;">No Patriots under this Interest Line Yet!</p>
<%end%>


  <%else%>
    <h2>Unauthoried access!</h2>
    <p>You are not authorised to view this page.</p>
  <%end%>


<%= link_to 'Edit', edit_interest_line_path(@interest_line), class:"btn btn-success" %> 

<%= form_for(@collage, html: { multipart: true }) do |f| %>
  
<% if @collage.errors.any? %>
 <div class="form-body">
              <form> 
    <div id="error_explanation">
      <h2><%= pluralize(@collage.errors.count, "error") %> prohibited this collage from being made:</h2>

      <ul>
      <% @collage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
<div class="row">
  <div class="col-md-9 col-xs-12">
    
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
      

<div class="col-md-6 col-sm-12">
            
<h3><i class="fa fa-gift"></i> Album Name </h3>
   
  <%= f.text_field  :title, class:"form-control has-feedback-left", required:"required" %>

    </div>
 <br/>
    <br/>
    <br/>
    <br/>
          <h3 style="color: orange;"> click to Add Picture to upload Pictures</h3>

         <table class="table table-striped table-bordered">
  <thead>
    <tr>
   
     <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="tasks">
    <%= f.fields_for :pics do |pic| %>
         
         <%= render 'pic_fields', :f => pic %>

    <% end %>
  </tbody>
</table>
          <div class="links">
            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                           <%= f.button :submit, class:"btn btn-success"%>  |   <%= link_to_add_association 'Add More Picture', f, :pics, class:'btn btn-danger', data: {
                association_insertion_node: '.tasks', association_insertion_method: :append
                }%>
                <br/><br/>
 </div>
               <%= link_to "Cancel", :back, class:"btn btn-warning"%>
<% end %>

</div>
</div>

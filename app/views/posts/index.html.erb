<% provide( :title, "Forum") %>

 <h2 class="title1" style="background-color:#edeff2;height: 50px; font-size:40px; color:orange;">OneMilMap Forum</h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
         
  

</div>



    
<div class="col-md-12 panel-grids">
<div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title"> Forum Posts</h3> </div> <div class="panel-body">
        <br />


 <a onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='blue'"  href="/posts/new">
        <i onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='blue'" style="font-size:27px; color:blue;" class="fa fa-plus">Create a Post</i>

        </a>


</div>
<br>
<br>
<br>
<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
<% if @posts.any?%>
  
    <% @posts.each do |post| %>
     <div class="col-xs-12">
      <div class="text-center"><center>
      <%if post.file_url%>
   
     <a href="/posts/<%= post.id%>"><img src="<%= post.file_url%>", style="width: 250px;, height: 100px;"/></a>

     <%end%>
    <h3 onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" class ="lead">
        <i style="font-size:27px"class="fa fa-star"> <a onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" href="/posts/<%= post.id%>"><%= post.title %></a></i></h3>
     <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>

         <a onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" href="/posts/<%=post.id%>">
        <i style="font-size:27px"class="fa fa-eye"></i>

        </a>
     
<% if current_user.admin? %>
        

        <a onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" href="/posts/<%=post.id%>/edit">
        <i style="font-size:27px"class="fa fa-edit"></i>

        </a>

        <%= link_to post, method: :delete, data: { confirm: 'Are you sure you really want to delete this post?' } do%><i onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" style="font-size:27px"class="fa fa-trash"></i><%end%>
    
   <% elsif post.user == current_user
      %>

  <a onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" href="/posts/<%=post.id%>/edit">
        <i style="font-size:27px"class="fa fa-edit"></i>

        </a>

    <% end %>

</div>

      <div>
        
        <%=truncate(post.body, :length => 450)%>
    </center>
    </div>
     <div class="text-center">
        <%= link_to "READ MORE", post_path(post) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>
<br>



<br>
 <%= link_to 'Dashboard', root_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>


<%else%>

<p style="color:red;">No Post on Forum Yet!</p>
<%end%>


<%= simple_form_for(@post,html: { novalidate: true }) do |form| %>
   <div class="form-body">
              <form> 
  <% if @post.errors.any? %>
  <div class="row">
  <div class="col-md-9 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>New Post <small>create a new post</small></h2>
        <ul class="nav navbar-right panel_toolbox">          
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
       
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


 <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
           
     <%= form.input :title, id: :post_title,  class:"form-control has-feedback-left", placeholder:"Post Title", type:"text", required:"required" %>
          </div>


 <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
             <%= form.label :file, "Attach a Picture or document if any..?   Allowed Formats : pdf, doc, html, docx, jpg, jpeg, gif, png, txt, mp3, xls, xlsx, txt, ppt" %>
     <%= form.input :file, as: :file, input_html: {}, autofocus: true %>
    <i class="fa fa-paperclip file-browser"></i>
          </div>


          <div class="col-md-12 col-sm-12 col-xs-12 form-group">
            
     <%= form.input :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, id: :post_body,  class:"form-control has-feedback-left", placeholder:"Post Body", type:"text", required:"required", rows:35, cols: 200 %>
    
  
          </div>

       <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
               <%= form.submit "Submit", class:"btn btn-info"%> <br/><br/>
 

<% end %>
</div>
</div>
</form>
</div>
</div>
</div>
</div>


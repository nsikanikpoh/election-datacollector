<% provide( :title, "Quick Donations") %>
    <h2 class="title1">Quick Donations</h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
            <div class="form-title">
              <h4>OneMilMap Support</h4>
            </div>
 
</div>
   
<div class="col-md-12 panel-grids">
            <div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title"> Donations Info</h3> </div> <div class="panel-body">

<table class="table">
  <thead>
    <tr>
      <th>Tel</th>
      <th>Email</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quick_donations.each do |quick_donation| %>
      <tr>
        <td><%= quick_donation.tel %></td>
        <td><%= quick_donation.email %></td>
        <td><%= quick_donation.amount %></td>
        <td><%= link_to 'Show', quick_donation %></td>
        
        <td><%= link_to 'Delete', quick_donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


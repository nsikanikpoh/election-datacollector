
<%= simple_form_for(@quick_donation) do |f| %>
 <div class="form-body">
              <form> 
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :tel, required:"required" %>
    <%= f.input :name, required:"required"%>
    <%= f.input :email, required:"required" %>
    <%= f.input :amount, required:"required" %>
  </div>

            <div class="sub_home">
               <%= f.submit "Donate Now", class:"btn btn-info"%>
       <div class="clearfix"> </div>
          </div>

  </form>

<% end %>
</div>
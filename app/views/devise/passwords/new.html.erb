<div class="widget-shadow">
          <div class="login-body">
                    

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

                        <h3 class="box-title m-b-20">Forgot Password?</h3><br/>
 <div class="form-group ">
                            <div class="col-xs-12">
    <%= f.email_field :email, autofocus: true, placeholder:"enter email",  class:"form-control"%>
  </div>
  </div>
 <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">

    <%= f.submit "Recover Password", class: "btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" %>
</div>
                        </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
            </div>
     

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |form| %>
  <%= devise_error_messages! %>
  
<div class="forms">
          <h2 class="title1">Account Edit</h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms">  <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
        <br />
        <form class="form-horizontal form-label-left input_mask">

 <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
 <div class="profile-usertitle">
          <div class="profile-usertitle-name">
          <div class="profile-userpic">
   <%= form.label :image, "Profile Pic" %>
 
   <%= image_tag(@user.image_url) if @user.image? %>
    <%= form.file_field :image, autofocus: true %>
   <%= form.hidden_field :image_cache %>
  
  
      <%= form.check_box :remove_image %>
      Remove Profile Pic
    
  </div>
  </div>

          </div>

    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            

          <%= form.label :first_name, "First Name" %>
        <%= form.text_field :first_name, id: :user_name, class:"form-control", placeholder:"First Name" %>
            
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
          </div>


          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            

          <%= form.label :last_name, "Last Name" %>
        <%= form.text_field :last_name, id: :user_name, class:"form-control", placeholder:"Last Name" %>
            
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
          </div>


          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email",  class:"form-control has-feedback-left", placeholder:"Email"%>
  <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
          </div>


          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            
                <%= form.label :phone, "Phone"%>
              <%= form.text_field :phone, id: :user_phone, class:"form-control", placeholder:"Phone" %>

            <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
  
    <%= form.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= form.password_field :current_password, autocomplete: "off", class:"form-control has-feedback-left", placeholder:"Current Password" %>
    <span class="fa fa-lock form-control-feedback right" aria-hidden="true"></span>
  </div>



          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            
    <%= form.label :password, "Password" %>
    
    <%= form.password_field :password, autocomplete: "off",  class:"form-control has-feedback-left", placeholder:"Password"%>
  <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
          </div>


          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            
                <%= form.label :password_confirmation , "Confirm Password"%>
              <%= form.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Confirm Password" %>

            <span class="fa fa-lock form-control-feedback right" aria-hidden="true"></span>
          </div>
 <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= form.label :gender%>
            <%= form.select :gender, ["Male","Female"], class:"form-control has-feedback-left", placeholder:"Title"%>
            
            
          </div>



   <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            
    <%= form.label :address, "Address" %>
    
    <%= form.text_field :address, id: :user_address,  class:"form-control has-feedback-left", placeholder:"Address"%>
  <span class="fa fa-edit form-control-feedback left" aria-hidden="true"></span>
          </div>


          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
               <%= form.submit "Update My Account", class:"btn btn-success"%>
       

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>


</div>
</div>
</form>
</div>
</div>
</div>
</div>


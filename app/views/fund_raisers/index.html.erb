<% provide( :title, "Quick Donations") %>
    <h2 class="title1">Fund Raisers</h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
           
 
</div>
   
<div class="col-md-12 panel-grids">
            <div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title"> Fund Raisers Table</h3> </div> <div class="panel-body">
<% if current_user.admin? %>

<% if @users.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Member Name</th>

      <th>Member Phone</th>

      <th colspan="2"></th>
    </tr>
  </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
       
        
        <td><%= user.phone %></td>
        
        <td><%= link_to 'Show', user %></td>
       
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @users, :renderer => BootstrapPagination::Rails %>
<%else%>

<p style="color:red;">No Members Registered Yet!</p>
<%end%>

<%else%>

<p style="color:red;">You are not authorized to view this page!</p>
<%end%>
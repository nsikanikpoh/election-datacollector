<% provide( :title, "New Donation") %>

<div class="row">
  <div class="col-md-12">
  <div class="x_panel" style="">
      <div class="x_title">
<h1> 
  Upgrade to Patriot
</h1>

</div>
<%= form_for([@donation]) do |form| %>
  
<% if @donation.errors.any? %>
  <div class="row">
  <div class="col-md-9 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        
        <ul class="nav navbar-right panel_toolbox">          
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <form class="form-horizontal form-label-left input_mask">
        <h2>Upgrade Donation <small>making an upgrade donation</small></h2>
    <div id="error_explanation">
      <h2><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being made:</h2>

      <ul>
      <% @donation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
<div class="row">
  <div class="col-md-9 col-xs-12">
    
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <form class="form-horizontal form-label-left input_mask">
<div class="col-md-6 col-sm-12  form-group has-feedback">
            
     <%= form.text_field :amount, id: :donation_amount,  class:"form-control has-feedback-left", placeholder:"please enter amount", type:"number", required:"required", rows:10%>
    
    
  <span class="fa fa-edit form-control-feedback left" aria-hidden="true"></span>
          </div>

 
  

          
          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
               <%= form.submit "Submit", class:"btn btn-success"%> <br/><br/>
 
               <%= link_to "Cancel", :back, class:"btn btn-warning"%>
<% end %>
</div>
</div>
</form>
</div>
</div>
</div>
</div>

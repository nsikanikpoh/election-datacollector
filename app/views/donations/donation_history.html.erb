<% provide( :title, "My Donation History") %>
 <h2 class="title1" style="background-color:#edeff2;height: 30px; font-size:30px; color:orange;">My Donation History</h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
        
</div>


    
<div class="col-md-12 panel-grids">
<div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title">Details</h3> </div> <div class="panel-body">
        <br />
 <br />
<canvas id="canvas"></canvas>
  <% if @donations.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Line</th>
     
     <th>Amount</th>
      <th>Donated At</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.line %></td>
         
         <td><%= donation.amount %></td>
         <td><%= donation.created_at %>
<p><%= time_ago_in_words(donation.created_at)%> ago</p>
         </td>
       
         <td><%= donation.expires_on %></td>
          <td><a onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" href="/donations/<%=donation.id%>"><i style="font-size:27px"class="fa fa-eye"></i></a>
</td>
      </tr>
    <% end %>
  </tbody>
</table>
 <%else%>
 No Donation Entered Yet

</div>
</div>
</div>

 <%end%>
  <%= link_to 'Dashboard', root_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>


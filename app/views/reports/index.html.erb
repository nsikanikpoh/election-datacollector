<% provide( :title, "Polling Report Index") %>


  <h2 class="title1">Polling Report</h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
            <div class="form-title">
              <h4>report</h4>
            </div>
  
  
</div>



    
<div class="col-md-12 panel-grids">
            <div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title"> Details</h3> </div> <div class="panel-body">
<br>
<br>
<br>
  <a   onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" href="/reports/new"><i style="font-size:27px;"class="fa fa-plus">New Polling Report</i></a>
<% if @reports.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Type of Election</th>
       <th>LGA</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |company| %>
      <tr>
        <td><%= company.election_type %> 
        </td>

        <td><%= company.lga %> 
        </td>

<td>
        <a  onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" href="/reports/<%=company.id%>"><i style="font-size:27px"class="fa fa-eye"></i></a></td>
        <td>
    

        <%if current_user.admin?%>

  
        <%= link_to company, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } do%><i onMouseOver="this.style.color='red'"
   onMouseOut="this.style.color='#73879C'" style="font-size:27px"class="fa fa-trash"></i><%end%></td>
      </tr>
  
  

      <% end %>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'Dashboard', root_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>


<%else%>

<p style="color:red;">No Report entered Yet!</p>
<%end%>








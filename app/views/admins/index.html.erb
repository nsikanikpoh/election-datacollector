<% provide( :title, "Members Index") %>


  <h2 class="title1">Admins INDEX</h2>
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
           
 
</div>
   
<div class="col-md-12 panel-grids">
            <div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title">Users Table</h3> </div> <div class="panel-body">
<br>
<br>
<br>
<% if current_user.admin? %>

<% if @users.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>First Name</th>

      <th>Last Name</th>

      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |company| %>
      <tr>
        <td><%= company.first_name %> 
        </td>

        <td><%= company.last_name %> 
        </td>
       

        

        <td>
        <a onMouseOver="this.style.color='orange'"
   onMouseOut="this.style.color='#73879C'" href="/users/<%=company.id%>"><i style="font-size:27px"class="fa fa-eye"></i></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'Dashboard', root_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>

<%= will_paginate @users, :renderer => BootstrapPagination::Rails %>
<%else%>

<p style="color:red;">No Agents Registered Yet!</p>
<%end%>

<%else%>

<p style="color:red;">You are not authorized to view this page!</p>
<%end%>